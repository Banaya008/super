<%= form_with(model: Super.configuration.path_parts(resource), local: true) do |f| %>
  <% columns.each do |column| %>
    <div class="lg:w-1/3">
      <%= f.label column %>
      <%= f.text_field column, class: "appearance-none border rounded w-full py-2 px-2 text-grey-darker leading-tight border border-grey-light focus:border-blue mt-2" %>
      <% resource.errors.full_messages_for(column).each do |error_message| %>
        <p class="text-red text-xs italic pt-1"><%= error_message %></p>
      <% end %>
    </div>
  <% end %>
  <div>
    <%= f.submit class: "bg-blue hover:bg-blue-dark text-white py-2 px-4 rounded mt-2" %>
  </div>
<% end %>
