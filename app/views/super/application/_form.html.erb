<%= super_form_for(Super::Link.polymorphic_parts(@record), builder: Super::FormBuilder) do |f| %>
  <div class="max-w-3xl">
    <% form.each_attribute do |field, type| %>
      <%= render(
        type,
        form: f,
        column: field
      ) %>
    <% end %>

    <div>
      <%= f.super.submit class: "super-button--fill-blue mt-2" %>
    </div>
  </div>
<% end %>
