<% schema = controls.form_schema(action: action_inquirer) %>

<%= form_for(Super.configuration.path_parts(@resource), builder: Super::Form::Builder) do |f| %>
  <div class="max-w-3xl">
    <% schema.fields.each do |field, type| %>
      <%= render(
        type,
        form: f,
        column: field
      ) %>
    <% end %>

    <div>
      <%= f.submit class: "super-button super-button--fill-blue mt-2" %>
    </div>
  </div>
<% end %>
